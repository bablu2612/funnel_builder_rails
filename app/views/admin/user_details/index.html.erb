<p id="notice"><%= notice %></p>

<h1>User Details</h1>

<table>
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Address</th>
      <th>Phone</th>
      <th>City</th>
      <th>Province</th>
      <th>Zipcode</th>
      <th>Country</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_details.each do |user_detail| %>
      
      <tr>
        <td><%= user_detail.user.f_name %></td>
        <td><%= user_detail.user.l_name %></td>
        <td><%= user_detail.user.email %></td>
        <td><%= user_detail.address %></td>
        <td><%= user_detail.phone %></td>
        <td><%= user_detail.city %></td>
        <td><%= user_detail.province %></td>
        <td><%= user_detail.zipcode %></td>
        <td><%= user_detail.country %></td>
        <td><%= link_to 'Show', admin_user_detail_path(user_detail.user_id) %></td>
        <td><%= link_to 'Edit', edit_admin_user_detail_path(user_detail.user_id) %></td>
        <td><%= link_to 'Destroy', admin_user_detail_path(user_detail.user_id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

