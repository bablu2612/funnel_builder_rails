<style>
button.close span {
    font-size: 40px;
    color: #fff;
    opacity: 1;
}
button.close {
    padding: 0;
    background-color: transparent;
    border: 0;
    -webkit-appearance: none;
    opacity: 1;
}
</style>
<%@attributes = ElementAttribute.where(page_element_id: element.id)%>
<%@styles = ElementStyle.where(page_element_id: element.id)%>
<<%=element.field%> 
<%@attributes.each do |attr|%>
    <%=attr.attribute_name%>="<%=attr.attribute_value%>"
<%end%> 
style="


<%@styles.each do |style|%>
    <%=style.style%>:<%=style.value%>;
<%end%>
">

<% input=element.value%>

<% if input.include? "~~~" %>
   
<% input= input.split("~~~") %>
<a href="/funnel_url/<%= input[0] %>" data-toggle="modal" data-target="#exampleModal">
<h1><input type="button" value="<%= input[1] %>"  /></h1>
</a>
<%else%>
<a href="/funnel_url/<%= input %>" data-toggle="modal" data-target="#exampleModal">
<h1><input type="button" value=" Open popup "  /></h1>
</a>
<%end%>


<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">

<div class="modal-dialog" role="document" >
<button type="button" class="close" data-dismiss="modal" aria-label="Close">
<span aria-hidden="false" >&times;</span>
</button>
   <div class="modal-content" >
   
       <div class="modal-body">
           
           <iframe href="/funnel_url/<%= input[0] %>"  style="width:100%; height:100%;"></iframe>
       </div>

   </div>
</div>
</div>

</center>





