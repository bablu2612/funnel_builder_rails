<p id="notice"><%= notice %></p>

<h1>Funnels</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @funnels.each do |funnel| %>
      <tr>
        <td><%= funnel.name %></td>
        <td><%= link_to 'Show', funnel %></td>
        <td><%= link_to 'Edit', edit_funnel_path(funnel) %></td>
        <td><%= link_to 'Destroy', funnel, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Funnel', new_funnel_path %>
