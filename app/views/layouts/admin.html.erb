<!DOCTYPE html>
<html>
  <head>

		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= action_cable_meta_tag %>
		<title>Pocket Funnels</title>
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <%= stylesheet_link_tag 'admin/application', media: 'all', 'data-turbolinks-track': 'reload' %> 
    <%= stylesheet_link_tag "admin/bootstrap.min" %>
    <%= stylesheet_link_tag "admin/style" %>
    <%= stylesheet_link_tag "admin/dashboard" %>
    <%= javascript_include_tag 'admin/application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'admin/jquery.min', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'admin/custom', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'rails.validations', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'admin/customvalidation', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'admin/dataTabels.min', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'admin/bootstrap.min', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'admin/cable', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag asset_path('admin/favicon.png') %>
    
  </head> 
  <body class="<% if admin_logged_in? %>dashboard<%end%>">   
    <%if admin_logged_in?%>
      <%=render "/layouts/admin_header.html.erb"%>
      <div class="container-fluid">
      <%=render "/layouts/admin_side_bar.html.erb"%>
      <%=render "/layouts/message.html.erb"%>
        
    <%else%>
      <%=render "/layouts/message.html.erb"%>
    <%end%>
      <%= yield %>
    <%if admin_logged_in?%> 
      <%=render "/layouts/admin_footer.html.erb"%>
    <%end%>
    </div>
  </body>
</html>
